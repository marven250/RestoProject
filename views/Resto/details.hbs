<h1 style="display: flex; justify-content: center; padding: 5px">Menu Item details</h1>
<div class="menu">
  {{#each food}}
  <div class="foodItem">
    <span class="title">{{this.title}}</span>
    <br>
    <div class="img"><img class="src" src='{{this.image}}'>
      <div class="text">{{this.type}}</div>
      <div class="text">{{this.description}}</div>
    </div>
    <a href="/details/{{this._id}}">
      <button class="buttons"
        style="background-color: yellow ; border-color: black; height: 30px; position: relative; left: 120px">View Details</button>
    </a>
    <br><br>
  </div>
  {{/each}}
</div>